#!/usr/bin/bash

# Ask for the administrator password upfront
sudo -v

# Set the dotfiles directory location
DOTFILES="$HOME/dotfiles"

# Overwrite .bash_profile
cp   "$HOME/dotfiles/.bash_profile" "$HOME/.bash_profile"

# Documents Alias
ln -s "/Volumes/Pongstr/BackUp/Documents" "$HOME/Documents/Documents"

# Movie Alias
echo "  + Add Movies directory"
ln -s "/Volumes/Pongstr/BackUp/Movies/Live"      "$HOME/Movies/Live"
ln -s "/Volumes/Pongstr/BackUp/Movies/Movies"    "$HOME/Movies/Movies"
ln -s "/Volumes/Pongstr/BackUp/Movies/Series"    "$HOME/Movies/Series"
ln -s "/Volumes/Pongstr/BackUp/Movies/Tutorials" "$HOME/Movies/Tutorials"

# Music Alias
echo "  + Add iTunes directory"
ln -s "/Volumes/Pongstr/BackUp/Music/iTunes" "$HOME/Music/iTunes"

# Picture Alias
echo "  + Add Pictures directory"
ln -s "/Volumes/Pongstr/BackUp/Pictures/" "$HOME/Pictures/Pictures"
ln -s "/Volumes/Pongstr/BackUp/Pictures/Pongstr.photolibrary" "$HOME/Pictures/Pongstr.photolibrary"


# Checkout Sublime Text Package Control
echo "Add Sublime Text Package Control"
cd   "$HOME/Library/Application Support/Sublime Text 3/Packages/" && git clone https://github.com/wbond/sublime_package_control.git "Package Control"

# Copy Sublime Text 3 User Prefrences and Snippets
cp -r "$DOTFILES/osx/sublimetext/" "$HOME/Library/Application Support/Sublime Text 3/Packages/User/"
echo  " * Sublime Text Preferences and Snippets"
echo  ""

# Copy Consolas Font (favourite for coding).
cp -r "$DOTFILES/osx/fonts/" "$HOME/Library/Fonts/"
echo  "✅  Copied Consolas Font"
echo  ""

cp -R "$DOTFILES/osx/preferences/" "$HOME/Library/Preferences/"
cp -R "$DOTFILES/osx/dock/" "$HOME/Library/Application Support/Dock/"
echo  "✅  Copied Application Preferences"
echo  "      * OSX Prefrences [ Dock, Launchpad, Finder SidebarList, Terminal ]"

# Install MacVim Janus
echo "Installing Janus: Vim Distribution"
echo "this may take a while..."
curl -Lo- https://bit.ly/janus-bootstrap | bash

# Log user out make sure the changes will take effect. 
echo ""
echo "You need to logout and log back in for settings to take effect."

logout() {
  osascript -e 'tell application "System Events" to log out'
  builtin logout
}

logout
