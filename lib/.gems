#!/usr/bin/env bash

# Ask for the administrator password upfront
sudo -v

# Update Gem
sudo gem update --system

# Install Gems Tools
# ----------------------------------------------------------------------

function installgem () {
  if ! gem spec "${@}" > /dev/null 2>&1; then
    echo "Installing ${@}..."
    sudo gem install "${@}"
  else
    echo "${@} is already installed"
  fi
}

installgem bundler
installgem jekyll
installgem compass
installgem foundation
installgem bootstrap-sass