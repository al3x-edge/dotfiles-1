#!/usr/bin/env bash

# Ask for the administrator password upfront
sudo -v

# Update Gem
# ----------------------------------------------------------------------
sudo gem update --system

function installgem(){
  if ! gem spec "${@}" > /dev/null 2>&1; then
    echo "Installing gem: ${@}"
    sudo gem install "${@}"
  else
    echo "Gem ${@} is installed!"
  fi
}

# Install Gems Tools
# ----------------------------------------------------------------------
installgem compass
installgem jammit
installgem jekyll
installgem zurb-foundation