#!/usr/bin/env bash

# Ask for the administrator password upfront
sudo -v

# install openssl, libyaml dependancies is installed via .brew
rvm install 2.0.0
rvm use 2.0.0 --default

# Update OSX SSL Certs
# ---------------------------------------------------------------------
rvm reload
rvm osx-ssl-certs update all

# Stay Healthy, automate updating of certs
rvm osx-ssl-certs cron install

# Update Gem
# ----------------------------------------------------------------------
sudo gem update --system

function gems(){
  if ! gem spec "${@}" > /dev/null 2>&1; then
    echo "Installing gem: ${@}"
    sudo gem install "${@}"
  else
    echo "Gem ${@} is installed!"
  fi
}

# Install Gems Tools
# ----------------------------------------------------------------------
gems compass
gems jekyll --version 1.2.1
gems bootstrap-sass
gems foundation
