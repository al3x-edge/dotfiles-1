#!/usr/bin/env bash

# Your Projects Directory
# I like to keep my projects in ~/Projects
# -----------------------------------------------------------------------------
homedir="$HOME/Projects"
srcdir="github"



# =============================================================================
# Initialise project
# =============================================================================
function init {
  while true; do
    if [ "${2:-}" = "Bootstrap" ]; then
      prompt="1/2"
       default=1
    elif [ "${2:-}" = "Foundation" ]; then
      prompt="1/2"
      default=2
    else
      prompt="1:Bootstrap | 2:Foundation"
      default=
    fi
    # Ask the question
    read -p "$1 [$prompt] " REPLY
    # Default?
    if [ -z "$REPLY" ]; then
       REPLY=$default
    fi
    # Check if the reply is valid
    case "$REPLY" in
      1*|1*) return 0 ;;
      2*|2*) return 1 ;;
    esac
  done
}



