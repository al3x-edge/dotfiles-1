#!/usr/bin/sh

# Install Native Apps
# ---------------------------------------------------------------------------
brew tap pongstr/homebrew-cask
brew install brew-cask

# Make /Applications the default location of apps
export HOMEBREW_CASK_OPTS="--appdir=/Applications"
  
function cask() {
  if brew cask info "${@}" | grep "Not installed" > /dev/null; then
    brew cask install "${@}"
  else
    echo "${@} is already installed."
  fi
}

cask app-cleaner
cask dropbox
cask firefox
cask github
cask google-chrome
cask google-chrome-canary
cask mamp
cask skype
cask sublime-text-3
cask textmate
cask trim-enabler
cask viber
cask vlc
cask virtualbox