#!/usr/bin/env

curl -L -o dotfiles.zip https://github.com/pongstr/dotfiles/archive/v1.0.2.zip && unzip dotfiles.zip
rm -rf dotfiles.zip
mkdir -p "$HOME/Projects/"
mv dotfiles-1.0.2 "$HOME/Projects/dotfiles"
ln -s "$HOME/Projects/dotfiles" "$HOME/dotfiles"
cd "$HOME/Projects/dotfiles" 

while true; do
  echo    "# ============================================================================ #"
  echo    "# Welcome to Pongstr Dotfiles                                                  #" 
  echo    "# You need Xcode and the latest Commandline Tools installed before installing  #"
  echo    "# ============================================================================ #"
  read -p "Would you like to proceed? " yn

  case $yn in
      [Yy]* ) sh .brew;;
      [Nn]* ) exit;;
      * ) echo "Please answer yes or no.";;
  esac
done
